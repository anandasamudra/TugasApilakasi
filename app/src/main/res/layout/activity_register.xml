<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".view.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Daftar"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_extrabold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Dirimu"
                android:textColor="@color/second2"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_extrabold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="375dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20sp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleTint="#000000"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">
                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgeditext"
                    android:ems="10"
                    android:textSize="15sp"
                    android:gravity="center|start|left"
                    android:inputType="textEmailAddress"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textColor="#626262"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="375dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20sp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleTint="#000000"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgeditext"
                    android:ems="10"
                    android:textSize="15sp"
                    android:gravity="center|start|left"
                    android:inputType="textEmailAddress"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textColor="#626262"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="375dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20sp"
                app:boxStrokeWidth="0dp"
                android:layout_marginTop="5sp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">
                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgeditext"
                    android:ems="10"
                    android:gravity="center|start|left"
                    android:inputType="textPassword"
                    android:paddingTop="0dp"
                    android:textSize="15sp"
                    android:paddingBottom="0dp"
                    android:textColor="#626262" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Password"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="375dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20sp"
                app:boxStrokeWidth="0dp"
                android:layout_marginTop="5sp"
                app:boxStrokeWidthFocused="0dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000000">
                <EditText
                    android:id="@+id/pass2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgeditext"
                    android:ems="10"
                    android:gravity="center|start|left"
                    android:inputType="textPassword"
                    android:paddingTop="0dp"
                    android:textSize="15sp"
                    android:paddingBottom="0dp"
                    android:textColor="#626262" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:background="@drawable/bgbtnsolid"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:text="Punya Akun"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/tvlogin"
                android:text=" Login Disini"
                android:textColor="@color/second1"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>